@model IEnumerable<ProyectoEcommerce.Models.Entidades.Venta>

@{
    ViewData["Title"] = "Index";
}

@section Estilos {
    <link href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet" />
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h4 class="card-title text-center">Tus Pedidos (@User.Identity.Name)</h4>
                    <img src="@ViewBag.UsuarioActual.URLFoto" alt="Foto de perfil" class="rounded-circle" style="width: 50px; height: 50px;">
                </div>
            </div>
            <div class="card-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Fecha)
                            </th>
                            <!--AQUI EL ESTADO DE PEDIDO-->
                             <th>
                                @Html.DisplayNameFor(model => model.EstadoPedido)
                            </th> 
                            <!--HASTA AQUI-->

                            <th>
                                @Html.DisplayNameFor(model => model.Cantidad)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Total)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)

                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Fecha)
                                </td>

                                <!--AQUI PARA MOSTRAR EL ESTADO DEL PEDIDO, NUEVO, DESPACHADO Y ASI-->
                                 <td>
                                    @Html.DisplayFor(modelItem => item.EstadoPedido)
                                </td> 

                                <td>
                                    @Html.DisplayFor(modelItem => item.Cantidad)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Total)
                                </td>
                                @* Quitar comentario para habilitar detalles externos *@
                                 <td>
                                    <a asp-action="MisDetalles" asp-route-id="@item.Id" class="btn btn-outline-info"><i class="fa-solid fa-circle-info"></i></a>
                                </td> 
                                @* <td>
                                    <a class="btn btn-outline-info" href="javascript:void(0);"><i class="fa-solid fa-circle-info"></i></a>
                                </td> *@

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#MyTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json"
                },
                "aLengthMenu": [
                    [25, 50, 100, 200, -1],
                    [25, 50, 100, 200, "Todos"]
                ]
            });
        });
    </script>
}