@model ProyectoEcommerce.Models.Entidades.Producto
@{
    ViewData["Title"] = "Crear";
    // Layout = _Layout.cshtml";
    //Layout = null; //aqui volver a sin cmnetar 
}

<div class="col-md-12">
    <div class="card">
        <div class="card-header text-center">
            <h5>Crear Libro</h5>
        </div>
        <div class="card-body">
            <form asp-action="Crear" method="post" enctype="multipart/form-data">
                <!-- Mostrar errores de validación generales -->
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label for="Nombre">Nombre</label>
                            <input asp-for="Nombre" class="form-control" placeholder="Nombre" required data-val-required="El campo Nombre es obligatorio." />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label for="CategoriaId">Categoría</label>
                            <select asp-for="CategoriaId" asp-items="Model.Categorias" class="form-control" required data-val-required="Debes seleccionar una categoría."></select>
                            <span asp-validation-for="CategoriaId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label for="Descripcion">Descripción</label>
                    <textarea asp-for="Descripcion" class="form-control" placeholder="Descripción" required data-val-required="El campo Descripción es obligatorio."></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label for="Precio">Precio</label>
                            <input asp-for="Precio" class="form-control" placeholder="Precio" required min="0.01" data-val="true" data-val-required="El campo Precio es obligatorio." data-val-min="El precio debe ser mayor a 0." />
                            <span asp-validation-for="Precio" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label for="Inventario">Inventario</label>
                            <input asp-for="Inventario" class="form-control" placeholder="Inventario" required min="0" data-val="true" data-val-required="El campo Inventario es obligatorio." data-val-min="El inventario debe ser mayor o igual a 0." />
                            <span asp-validation-for="Inventario" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label for="Imagen">Imagen</label>
                    <input type="file" class="form-control" name="Imagen" />
                    @if (ViewData.ModelState.ContainsKey("Imagen"))
                    {
                        <span class="text-danger">@ViewData.ModelState["Imagen"].Errors[0].ErrorMessage</span>
                    }
                </div>

                <div class="card-footer text-center">
                    <div class="form-group">
                        <button type="submit" class="btn btn-sm btn-success"><i class="fa fa-save"></i> Guardar</button>
                        <button type="button" class="btn btn-sm btn-primary" data-bs-dismiss="modal"><i class="fa fa-ban"></i> Cancelar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
